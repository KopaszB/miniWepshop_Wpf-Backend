<Window x:Class="wpf_regisztraciosForm.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_regisztraciosForm"
        mc:Ignorable="d"
        Title="Bejelentkezés" Height="650" Width="400" WindowStartupLocation="CenterScreen" Icon="users.ico"  BorderBrush="LightGray" BorderThickness="5">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Bejelentkezés"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Kérlek add meg az adataidat"
                       FontSize="14"
                       Foreground="Gray"
                       HorizontalAlignment="Center"/>
            <GroupBox Header="E-mail"
                      Margin="40 5"
                      BorderBrush="Transparent">
                <TextBox Name="userEmail"
                         Padding="5"
                         FontSize="16"
                         BorderBrush="LightGray"
                         ToolTip="Add meg az email címed!"/>
            </GroupBox>
            
            <GroupBox Header="Jelszó"
                      Margin="40 5"
                      BorderBrush="Transparent">
                <PasswordBox Name="userPwd"
                         Padding="5"
                         FontSize="16"
                         BorderBrush="LightGray"
                         ToolTip="Add meg a jelszavadat!"
                          />
            </GroupBox>
            
            
            <Button Name="logIn"
                    Content="Bejelentkezés"
                    Foreground="White"
                    Background="Black"
                    Margin="45 5"
                    Padding="0 10"
                    FontSize="15"
                    FontWeight="DemiBold" Click="LogIn_Click"
                    IsDefault="True"
                    />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10">
                <TextBlock Text="Még nem regisztráltál? "/>
                <TextBlock><Hyperlink Click="Hyperlink_Click">Regisztrájl most!</Hyperlink></TextBlock>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>

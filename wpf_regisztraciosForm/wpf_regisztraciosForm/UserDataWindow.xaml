<Window x:Class="wpf_regisztraciosForm.UserDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_regisztraciosForm"
        mc:Ignorable="d"
        Title="Felhasználó" Height="650" Width="400" WindowStartupLocation="CenterScreen" Icon="users.ico"  BorderBrush="LightGray" BorderThickness="5">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Kilépés"
                      Click="MenuItemQuit_Click"
                      />
            <MenuItem Header="Adataim" 
                      Click="MenuItemData_Click"
                      />
        </Menu>
        <Border Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Felhasználói adatok"
                           FontSize="20"
                           FontWeight="DemiBold"
                           HorizontalAlignment="Center"
                           Margin="0 35 0 35"/>
                <StackPanel Grid.Row="1">
                    <TextBlock Text="Név:"
                               FontSize="15"
                               FontWeight="Bold"/>
                    <TextBlock Name="tbx_name"
                               FontSize="15"
                               Margin="0 0 0 20"/>

                    <TextBlock Text="Email:"
                               FontSize="15"
                               FontWeight="Bold"/>
                    <TextBlock Name="tbx_email"
                               FontSize="15"
                               Margin="0 0 0 20"/>
                    
                    <TextBlock Text="Dátum:"
                               FontSize="15"
                               FontWeight="Bold"/>
                    <TextBlock Name="tbx_date"
                               FontSize="15"
                               Margin="0 0 0 20"/>


                </StackPanel>
            </Grid>
        </Border>
    </DockPanel>
    
</Window>

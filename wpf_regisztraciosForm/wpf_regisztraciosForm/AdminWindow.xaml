<Window x:Class="wpf_regisztraciosForm.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_regisztraciosForm"
        mc:Ignorable="d"
        Title="AdminWindow" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen" BorderBrush="LightGray" BorderThickness="5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Jobb oldal-->
        <Border  Grid.Column="0"
                 Background="#ffebebeb"
                 Margin="20"
                 BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Regisztrált felhasználók"
                           FontSize="30"
                           FontWeight="Bold"
                           Margin="0 20 0 0"
                           HorizontalAlignment="Center"
                           />
                <DataGrid Grid.Row="1"
                          Name="usersTable"
                          ColumnWidth="auto"
                          IsReadOnly="True"
                          Margin="20"
                        SelectionChanged="UsersTable_SelectionChanged"/>
            </Grid>
        </Border>
        <!--Bal oldal-->
        <StackPanel VerticalAlignment="Center" Grid.Column="1">
            <TextBlock Text="Felhasználó adatai"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 30"/>
            <DockPanel LastChildFill="True" Margin="10">
                <Label Content="Név:"
                       FontSize="15"
                       FontWeight="DemiBold"
                       Padding="5"/>
                <TextBox Name="userName"
                         FontSize="15"
                         BorderBrush="LightGray"/>
            </DockPanel>
            <DockPanel LastChildFill="True" Margin="10">
                <Label Content="E-mail:"
                       FontSize="15"
                       FontWeight="DemiBold"
                       Padding="5"/>
                <TextBox Name="userEmail"
                         FontSize="15"
                         BorderBrush="LightGray"/>
            </DockPanel>
            <DockPanel LastChildFill="True" Margin="10">
                <Label Content="Dátum:"
                       FontSize="15"
                       FontWeight="DemiBold"
                       Padding="5"/>
                <TextBox Name="userDate"
                         FontSize="15"
                         BorderBrush="LightGray"/>
            </DockPanel>
            <DockPanel LastChildFill="True" Margin="10">
                <Label Content="Jelszó:"
                       FontSize="15"
                       FontWeight="DemiBold"
                       Padding="5"/>
                <TextBox Name="userPassword"
                         FontSize="15"
                         BorderBrush="LightGray"/>
            </DockPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 20 0 0">
                <Button Name="btn_add"
                        Background="Black"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="DemiBold"
                        Content="Hozzáad"
                        Padding="30 10"
                        Margin="0 10 5 0" Click="Btn_add_Click"/>
                <Button Name="btn_modify"
                        Background="Black"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="DemiBold"
                        Content="Módosítás"
                        Padding="30 10"
                        Margin="0 10 5 0" Click="Btn_modify_Click"/>
                <Button Name="btn_delete"
                        Background="Black"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="DemiBold"
                        Content="Törlés"
                        Padding="30 10"
                        Margin="0 10 5 0" Click="Btn_delete_Click"/>
                <Button Name="btn_refresh"
                        Background="Black"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="DemiBold"
                        Content="Frissítés"
                        Padding="30 10"
                        Margin="0 10 5 0" Click="Btn_refresh_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0 150 0 0">
                <TextBlock Text="Vissza a bejelentkezéshez:"
                           Margin="0 0 10 0"/>
                <TextBlock>
                    <Hyperlink Name="linkLogin"
                               Click="LinkLogin_Click">Bejelentkezés</Hyperlink>
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0 5 0 0">
                <TextBlock Text="Vissza a regisztrációhoz:"
                           Margin="0 0 10 0"/>
                <TextBlock>
                    <Hyperlink Name="linkReg"
                               Click="LinkReg_Click">Regisztráció</Hyperlink>
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0 5 0 0">
                <TextBlock Text="Kilépés az alkalmazásból:"
                           Margin="0 0 10 0"/>
                <TextBlock>
                    <Hyperlink Name="linkExit"
                               Click="LinkExit_Click">Kilépés</Hyperlink>
                </TextBlock>
            </StackPanel>
            
            
        </StackPanel>
    </Grid>
</Window>
